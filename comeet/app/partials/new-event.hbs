<div class="col-xs-12 col-sm-9 col-md-10 component" data-component="new-event">
    <h1>Neues Event</h1>
    <form enctype="multipart/form-data" action="/04_detail.html" method="post">
        <div class="col-xs-12 col-sm-6">
            <label>Name des Events</label>
            <input type="text" name="username" id="username" placeholder="z.b. Einweihungsparty" required>
            <textarea type="text" name="" cols="35" rows="4" id="" placeholder="Beschreibung de Events">

            </textarea>
            <button type="submit">Freunde einladen</button>
        </div>
        <div class="col-xs-12 col-sm-6">
            <label>Datum/Uhrzeit</label>
            <input type="datetime" name="passwortRepeat" id="passwortRepeat" placeholder="Datum/Uhrzeit" required>
            <span class="icon-calendar"></span>

            <label>Ort des Events</label>
            <input type="email" name="email" id="email" placeholder="Strasse" required>
            <input type="email" name="emailRepeat" id="emailRepeat" placeholder="Ort" required>
            <button type="submit">Event Speichern</button>
            <a href="04_detail.html">Event Speichern</a>

        </div>
    </form>


</div>