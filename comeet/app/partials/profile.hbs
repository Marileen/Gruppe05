<div class="col-xs-12 col-sm-offset-1 col-sm-8 col-md-9 component" data-component="profile">
    <h1>Profil</h1>
    <div class="col-xs-12 col-sm-3 frontlayer">
        <label>Benutzername</label>
        <input type="text" name="username" id="username" value="Gruppe5" required>
        <button type="submit" id="username-change">ändern</button>
        <label>Passwort</label>
        <input type="password" name="passwort" id="passwort" value="*****" required>

        <div class="pw-change">
